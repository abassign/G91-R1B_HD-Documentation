                </color>
            </text>
            <text>
                <row>0</row>
                <col>13</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%5.0f</format>
                <property>fdm/jsbsim/systems/autopilot/gui/altitude-hold-ft</property>
