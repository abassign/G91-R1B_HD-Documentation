                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>14</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>15</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>16</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>17</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>18</col>
                <label> </label>
            </text>
        </group>
    </group>

</PropertyList>
