                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>4</col>
                <label>this</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>5</col>
                <label>9999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/autopilot/gui/speed-value</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>6</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>[%3.0f]</format>
                <property>fdm/jsbsim/systems/autopilot/speed-value-target-lag</property>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>7</col>
                <label>dif</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>8</col>
                <label>9999</label>
                <halign>left</halign>
                <live>true</live>
                <format>% 3.1f</format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-speed-dif-mph</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>9</col>
                <label>Target dh</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>10</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%5.0f</format>
                <property>fdm/jsbsim/systems/autopilot/altitude-selected-ft-dif</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>11</col>
                <label> | </label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>12</col>
                <label>h (ft)</label>
                <color>
                    <red>0.8</red>
