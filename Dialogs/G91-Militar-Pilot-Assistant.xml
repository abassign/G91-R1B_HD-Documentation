<PropertyList>
    
    <name>militar-pilot-assistant</name>
    <layout>vbox</layout>
    <default-padding>8</default-padding>
    <modal>false</modal>
    <width>1024</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Militar Pilot Assistant</label>
        </text>
        <empty><stretch>true</stretch></empty>
