        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <group>
            <layout>table</layout>
            <button>
                <row>0</row>
                <col>0</col>
                <pref-width>100</pref-width>
                <legend>Interception</legend>
                <live>true</live>
                <halign>left</halign>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-control-mod</property>
                    <value>1</value>
                </binding>
            </button>
            <text>
                <row>0</row>
                <col>0</col>
                <label>999</label>
                <halign>right</halign>
                <live>true</live>
                <format> [% 1.0f] </format>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-control-active-level</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>9999999999</label>
                <halign>left</halign>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-control-msg</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <checkbox>
                <row>0</row>
                <col>2</col>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp</property>
                <live>true</live>
                <label>Switch AI/MP</label>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp-mod</property>
                    <value>1</value>
                </binding>
            </checkbox>
            <text>
                <row>0</row>
                <col>3</col>
                <pref-width>200</pref-width>
                <label>9999999</label>
                <halign>left</halign>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp-msg</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>4</col>
                <label>Range:</label>
                <halign>left</halign>
            </text>
            <slider>
                <row>0</row>
                <col>5</col>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-distance</property>
                <min>10</min>
                <max>200</max>
                <step>10</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>6</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-distance</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>7</col>
                <label>Targets found</label>
                <halign>left</halign>
            </text>
            <text>
                <row>0</row>
                <col>8</col>
                <label>99</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.0f / </format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-total-select</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>8</col>
                <label>9999</label>
                <halign>right</halign>
                <live>true</live>
                <format>%4.0f</format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-total-found</property>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
        </group>
    </group>
    <group>
        <layout>hbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Callsign</label>
            </text>
            <input>
                <row>0</row>
                <col>1</col>
                <pref-width>130</pref-width>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-callsign-select</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-callsign-mod</property>
                    <value>1</value>
                </binding>
            </input>
            <text>
                <row>0</row>
                <col>2</col>
                <label>Selector:</label>
                <halign>left</halign>
            </text>
            <combo>
                <row>0</row>
                <col>3</col>
                <pref-width>500</pref-width>
                <halign>left</halign>
                <name>airplane-selector</name>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-list/airplane</property>
                <editable>false</editable>
                <properties>fdm/jsbsim/systems/autopilot/gui/interception-list/airplanes</properties>
                <binding>
                    <command>dialog-apply</command>
                    <object-name>airplane-selector</object-name>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("fdm/jsbsim/systems/autopilot/gui/interception-list/rw_select",1);
                    </script>
                </binding>
            </combo>
            <text>
                <row>0</row>
                <col>4</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>5</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>6</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>7</col>
                <label> </label>
            </text>
            <text>
                <row>0</row>
                <col>8</col>
                <label> </label>
            </text>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Dist nm</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.1f</format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-dist-nm</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <label>Speed CAS target</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
