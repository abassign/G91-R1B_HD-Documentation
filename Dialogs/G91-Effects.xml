<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>G91_Help_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>500</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Special effects</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>/fdm/jsbsim/fcs/aero-int-turbulence-active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Aero induced turbolence</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>
    
    <hrule/>

</PropertyList>
