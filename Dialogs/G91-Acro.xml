<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>Acro_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>400</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Acrobatic configuration</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Activate</label>
            <halign>right</halign>
        </text>
        <checkbox>
            <halign>fill</halign>
            <property>sim/G91/smoke/acrobatic/on</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <button>
                <row>0</row>
                <col>0</col>
                <legend>Load / unload the acrobatic tanks</legend>
                <halign>fill</halign>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/fuel/external-tank-acrobatic</property>
                </binding>
            </button>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            
            <text>
                <row>0</row>
                <col>0</col>
                <label>Smoke density</label>
                <halign>right</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            <slider>
                <row>0</row>
                <col>1</col>
                <name>Smoke_intesity</name>
                <property>sim/G91/smoke/acrobatic/shutter</property>
                <min>0</min>
                <max>1000</max>
                <step>10</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>2</col>
                <live>true</live>
                <format>%3.0f </format>
                <property>sim/G91/smoke/acrobatic/shutter</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            
            <text>
                <row>1</row>
                <col>0</col>
                <label>Smoke duration</label>
                <halign>right</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            <slider>
                <row>1</row>
                <col>1</col>
                <name>Smoke_duration</name>
                <property>sim/G91/smoke/acrobatic/duration</property>
                <min>1</min>
                <max>100</max>
                <step>1</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>1</row>
                <col>2</col>
                <live>true</live>
                <format>%3.0f </format>
                <property>sim/G91/smoke/acrobatic/duration</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            
            <text>
                <row>2</row>
                <col>0</col>
                <label>Smoke dispersion</label>
                <halign>right</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            <slider>
                <row>2</row>
                <col>1</col>
                <name>Smoke_dispersion</name>
                <property>sim/G91/smoke/acrobatic/dispersion</property>
                <min>-10</min>
                <max>10</max>
                <step>1</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>2</row>
                <col>2</col>
                <live>true</live>
                <format>%3.0f </format>
                <property>sim/G91/smoke/acrobatic/dispersion</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
            </text>
            
        </group>
        
        <hrule/>
        
        <group>
            <text>
                <label>Colours configuration</label>
            </text>
            <layout>vbox</layout>
            <group>
                <layout>table</layout>
                
            </group>
        </group>
        
        <hrule/>
        
        <group>
            <layout>vbox</layout>
            <group>
                <layout>table</layout>
                
                <text>
                    <label>Red</label>
                    <halign>right</halign>
                    <row>0</row>
                    <col>0</col>
                </text>
                <checkbox>
                    <row>0</row>
                    <col>1</col>
                    <halign>fill</halign>
                    <property>sim/G91/smoke/acrobatic/red</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
                
                <text>
                    <label>Green</label>
                    <halign>right</halign>
                    <row>0</row>
                    <col>2</col>
                </text>
                <checkbox>
                    <row>0</row>
                    <col>3</col>
                    <halign>fill</halign>
                    <property>sim/G91/smoke/acrobatic/green</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
                
                <text>
                    <label>Blue</label>
                    <halign>right</halign>
                    <row>0</row>
                    <col>4</col>
                </text>
                <checkbox>
                    <row>0</row>
                    <col>5</col>
                    <halign>fill</halign>
                    <property>sim/G91/smoke/acrobatic/blue</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
                
            </group>
        </group>
        
    </PropertyList>
    
    
    
