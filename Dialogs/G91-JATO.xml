<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>JATO_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>400</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>JATO System</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <slider>
                <row>0</row>
                <col>0</col>
                <name>jato_request_to_mount</name>
                <property>fdm/jsbsim/systems/jato/request-to-mount</property>
                <min>0.0</min>
                <max>4.0</max>
                <step>2</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>1</col>
                <halign>left</halign>
                <label>9</label>
                <live>true</live>
                <property>fdm/jsbsim/systems/jato/request-to-mount</property>
                <color>
                    <red>1.0</red>
                    <green>0.0</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <label>JATO rocket mounted</label>
                <halign>center</halign>
                <row>0</row>
                <col>1</col>
            </text>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <button>
                <row>0</row>
                <col>0</col>
                <legend>Redy button</legend>
                <halign>fill</halign>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/manual-switches/jato/sw-ready-togle</property>
                </binding>
            </button>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <button>
                <row>0</row>
                <col>0</col>
                <legend>JATO ignition</legend>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/manual-switches/jato/sw-ignition-togle</property>
                </binding>
            </button>
            <button>
                <row>0</row>
                <col>1</col>
                <legend>JATO jettinson</legend>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/manual-switches/jato/sw-jettinson-togle</property>
                </binding>
            </button>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <label>Autostart JATO</label>
                <halign>right</halign>
                <row>0</row>
                <col>0</col>
            </text>
            <checkbox>
                <row>0</row>
                <col>1</col>
                <halign>fill</halign>
                <property>fdm/jsbsim/systems/jato/autostart-ok</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </checkbox>
            <text>
                <label>Ignition speed</label>
                <halign>right</halign>
                <row>0</row>
                <col>2</col>
            </text>
            <slider>
                <row>0</row>
                <col>3</col>
                <name>jato-autostart-speed</name>
                <property>fdm/jsbsim/systems/jato/autostart-speed</property>
                <min>40</min>
                <max>500</max>
                <step>10</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <label>999999</label>
                <live>true</live>
                <format>%2.0f (mph)</format>
                <property>fdm/jsbsim/systems/jato/autostart-speed</property>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>0.6</blue>
                </color>
                <halign>left</halign>
                <row>0</row>
                <col>4</col>
            </text>
        </group>
    </group>
    
</PropertyList>

