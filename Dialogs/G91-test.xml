                <col>0</col>
            </text>
            <slider>
                <row>0</row>
                <col>1</col>
                <name>Testing_log</name>
                <property>sim/G91/testing/log</property>
                <min>0</min>
                <max>2</max>
                <step>1</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>2</col>
                <label>999999</label>
                <live>true</live>
                <format>%1.0f</format>
                <property>sim/G91/testing/log</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
